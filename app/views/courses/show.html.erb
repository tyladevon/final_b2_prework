<h1><%= @course.name %></h1>

<section>
  <ul>
    <% @course.student_grades.each do |course_student| %>
    <p class="student-info"><%= course_student.student.name %> <%= course_student.grade %></p>
    <p><%= button_to "unenroll", "/courses/#{@course.id}/students/#{course_student.student.id}", method: :delete %></p>
    <% end %>
  </ul>
</section>

<section>
  <%= form_tag "/course_students/#{@course.id}" do %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= submit_tag 'Enroll' %>
  <% end %>
</section>
